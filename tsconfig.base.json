{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@org/ui": ["libs/shared/ui/src/index.ts"],
      "apps/website/about/Module": ["apps/website/about/src/remote-entry.ts"],
      "apps/website/cart/Module": ["apps/website/cart/src/remote-entry.ts"],
      "apps/website/home/Module": ["apps/website/home/src/remote-entry.ts"],
      "apps/website/shop/Module": ["apps/website/shop/src/remote-entry.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
